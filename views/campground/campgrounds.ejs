<% include ../partials/header %>

<div class="container">
	<div class="jumbotron">
	  <div class="container">
	    <h1>List of campgrounds</h1>
	    <p>Some of the best places to chill your bones.</p>
	    <p><a class="btn btn-primary btn-large"  href="/campgrounds/newCampground">Add a campground</a></p>
	  </div>
	</div>


	<div class="row text-center" style="display: flex; flex-wrap: wrap;">
		<% campgrounds.forEach(function(campground){ %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src="<%= campground.image %>">
				 	<div class="caption">
				 		<h3><%= campground.name %></h3>	
				 	</div>
				 	<p><a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a></p>	
				</div>
			</div>
		<% }); %>
	</div>
</div>


<% include ../partials/footer %>