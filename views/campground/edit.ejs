<% include ../partials/header %>
<div class="container">
    
        
        <div style="width: 30%; margin: 25px auto;">
            <h3 style="text-align: center; margin: 60px auto;"><%= askedCampground.name %> (EDIT)</h3>
            <form action="/campgrounds/<%= askedCampground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="edited_CG[name]" value="<%= askedCampground.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="edited_CG[image]" value="<%= askedCampground.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="edited_CG[description]" value="<%= askedCampground.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    
</div>
<% include ../partials/footer %>